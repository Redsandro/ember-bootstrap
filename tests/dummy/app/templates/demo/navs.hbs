<div class="bs-example">
  <BsForm @formLayout="inline" @model={{this}} as |form|>
    <form.element
      @controlType="power-select"
      @options={{typeChoices}}
      @label="Type"
      @property="type"
      class="mr-2"
      as |el|>
      <el.control @searchEnabled={{false}} />
    </form.element>
    <form.element
      @controlType="checkbox"
      @disabled={{bs-eq type tabs}}
      @label="Stacked"
      @property="stacked"
      @onChange={{action "updateStacked"}}
      class="mr-2"
     />
    <form.element
      @controlType="checkbox"
      @disabled={{stacked}}
      @label="Justified"
      @property="justified"
      class="mr-2"
     />
    <form.element
      @controlType="checkbox"
      @disabled={{stacked}}
      @label="Fill"
      @property="fill"
      class="mr-2"
     />
  </BsForm>
  <hr>
  <!-- BEGIN-SNIPPET nav-demo -->
  <BsNav
    @type={{type}}
    @justified={{justified}}
    @stacked={{stacked}}
    @fill={{fill}} as |nav|
  >
    <nav.item @linkTo="index">Home</nav.item>
    <nav.item @linkTo="demo.navs">Nav</nav.item>
    <nav.dropdown as |dd|>
      <dd.toggle>
        Dropdown
        <span class="caret"></span>
      </dd.toggle>
      <dd.menu as |ddm|>
        <ddm.item>
          {{#ddm.link-to "index"}}Home{{/ddm.link-to}}
        </ddm.item>
        <ddm.item>
          {{#ddm.link-to "demo.navs"}}Nav{{/ddm.link-to}}
        </ddm.item>
      </dd.menu>
    </nav.dropdown>
  </BsNav>
  <!-- END-SNIPPET -->
</div>
<div class="highlight">
  <CodeSnippet
    @name="nav-demo.hbs"
    @dynamicProperties={{hash
      type=type
      stacked=stacked
      justified=justified
      fill=fill
    }}
  />
</div>
