<div class="bs-example">
  <BsButton @active={{notCollapsed}} @onClick={{action "toggle"}}>
    {{#if collapsed}}
      Show
    {{else}}
      Hide
    {{/if}}
  </BsButton>

  <hr>

  <!-- BEGIN-SNIPPET collapse-demo -->
  <BsCollapse @collapsed={{collapsed}}>
    <div class="well">
      <p>This is collapsible content</p>
    </div>
  </BsCollapse>
  <!-- END-SNIPPET -->
</div>
<div class="highlight">
  <CodeSnippet
    @name="collapse-demo.hbs"
    @dynamicProperties={{hash
      collapsed=collapsed
    }}
  />
</div>
